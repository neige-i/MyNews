<?xml version="1.0" encoding="utf-8"?>
<!--
    This layout is the ChildActivity content view that defines a base layout.
    It contains a Toolbar to display the title of the activity and the 'up' navigation button.
    The rest of the layout, which is specific for each subclass of ChildActivity, is defined in
    other files and is inflated programmatically.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

</LinearLayout>
